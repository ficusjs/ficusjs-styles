{
  "name": "@ficusjs/styles",
  "version": "1.0.0-alpha.1",
  "description": "Global styles for FicusJS",
  "scripts": {
    "sass": "run-s sass:compile clean:css",
    "sass:compile": "run-p sass:compile:*",
    "sass:compile:theme": "sass src/scss/ficus-globals.scss dist/css/ficus-globals.css",
    "sass:compile:utilities": "sass src/scss/ficus-utilities.scss dist/css/ficus-utilities.css",
    "clean:css": "run-p clean:css:*",
    "clean:css:theme": "cleancss -o dist/css/ficus-globals.min.css dist/css/ficus-globals.css",
    "clean:css:utilities": "cleancss -o dist/css/ficus-utilities.min.css dist/css/ficus-utilities.css",
    "watch:sass:compile": "chokidar \"src/**/*.scss\" -c \"run-p sass\"",
    "watch:sass": "run-p watch:sass:*",
    "lint:sass": "stylelint \"src/sass/**/*.scss\""
  },
  "author": "James Cavanagh",
  "license": "ISC",
  "devDependencies": {
    "clean-css-cli": "5.2.1",
    "chokidar-cli": "2.1.0",
    "sass": "1.32.8",
    "npm-run-all": "4.1.5",
    "stylelint": "13.12.0",
    "stylelint-config-standard": "21.0.0",
    "stylelint-scss": "3.19.0"
  }
}
