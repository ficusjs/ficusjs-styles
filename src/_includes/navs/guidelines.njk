{% set navPages = collections.guidelines | eleventyNavigation %}
<h2 class="fu-text-02 fu-text-transform-uppercase fu-spacing-ml-03 fu-spacing-mr-03 fu-spacing-mb-03 fu-lg-spacing-ml-07 fu-lg-spacing-mr-07">Guidelines</h2>
<nav class="[ fc-nav ] [ fu-spacing-mb-07 fu-lg-spacing-ml-06 fu-lg-spacing-mr-06 ]">
  {% macro renderNavListItem(entry) -%}
  <li>
    <a href="{{ entry.url | url }}" {% if entry.url == page.url %} class="active"{% endif %}>{{ entry.title | safe }}</a>
    {%- if entry.children.length -%}
      <ul class="fc-nav__list">
        {%- for child in entry.children %}{{ renderNavListItem(child) }}
        {% endfor -%}
      </ul>
    {%- endif -%}
  </li>
  {%- endmacro %}
  <ul class="fc-nav__list">
    {%- for entry in navPages %}{{ renderNavListItem(entry) }}
    {%- endfor -%}
  </ul>
</nav>
